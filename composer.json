{
  "name": "sergittos/bedwars",
  "description": "BedWars for PocketMine-MP",
  "type": "pocketmine-plugin",
  "license": "LGPL-3.0",
  "require": {
    "bstats/pocketmine-mp": "^1.0",
    "pocketmine/pocketmine-mp": "^5.0.0",
    "dresnite/easyui": "^1.0.5"
  },
  "require-dev": {
    "sof3/pharynx": "^0.3.0"
  },
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "scripts": {
    "build": "php -dphar.readonly=0 vendor/bin/pharynx -i=. -c -p=BedwarsPM.phar"
  },
  "config": {
    "platform": {
      "php": "8.1.0"
    },
    "sort-packages": true
  }
}